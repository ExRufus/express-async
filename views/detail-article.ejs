<!DOCTYPE html>
<html>

<head>
    <%- include('partials/header.ejs', index) -%>
</head>

<body>
        <%- include('partials/navbar') -%>
    
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <h1><%= article.title %></h1>
                <p><%= article.content %></p>
            </div>
        </div>
        
        <div class="row">
            <p>Artikel Terkait :</p>
            <% articles.forEach((data) => { %>
                <% if(data.publish && data.title !== article.title) { %>
            <div class="col-md-3">
                    <%- include('component/article', {article: data}) -%>
            </div>
                <% } %>
        <% }) %>
        </div>

    <div class="row mt-5">
        <div class="col-md-12">
            <%- include('partials/footer.ejs') -%>
        </div>
    </div>
</div>

</body>

</html>